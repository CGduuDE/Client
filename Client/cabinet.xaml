<Window x:Class="Client.cabinet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="300" Width="600" MaxHeight="300" MinHeight="300" MaxWidth="600" MinWidth="600" FontFamily="Segoe UI Black">
    <Grid Background="#1C1C1C">
        <Grid>
            <PasswordBox Background="Wheat" x:Name ="New_Password" HorizontalAlignment="Left" Height="37"  VerticalAlignment="Top" Width="369" Margin="203,57,0,0" />
            <Button Content="Сменить пароль" HorizontalAlignment="Left" Margin="26,57,0,0" VerticalAlignment="Top" Width="156" Height="37" Click="Button_Change_Password"/>
        </Grid>
        
        <Grid>
            <TextBox Background="Wheat" x:Name ="New_Email" HorizontalAlignment="Left" Height="37" TextWrapping="Wrap"  Text="" VerticalAlignment="Top" Width="373" Margin="201,114,0,0" />
            <Button Content="Сменить почту" HorizontalAlignment="Left" Margin="29,114,0,0" VerticalAlignment="Top" Width="153" Height="37" Click="Button_Change_Email"/>
        </Grid>


    </Grid>
</Window>
